<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('additional_exams_text') %></h1>
  <h3><%= t('edit_additional_exam_groups') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= "#{t('course_text')}"%> &raquo;
      <%=  @course.full_name%> &raquo;
      <%= "#{t('batch')} #{@batch.name}" %> &raquo;
      <%= link_to "#{t('additional_exams_text')}", batch_additional_exam_groups_path(@batch) %> &raquo;
      <%= t('edit_additional_exam') %>
    </div>


    <% form_for [@batch, @additional_exam_group] do |f| %>

      <%= f.error_messages %>


      <div class="label-field-pair">
        <label for="additional_exam_name"><%= f.label "#{t('name')}" %></label>
        <div class="text-input-bg"> <%= f.text_field :name %></div>
      </div>
      <div id="sub_button"><%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %></div>



    <% end %>

  </div></div>